<%= form_with model: item do |form| %>
  <div>
    <%= form.label :sku %><br>
    <%= form.text_field :sku %>
    <% item.errors.full_messages_for(:sku).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% item.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :desc %><br>
    <%= form.text_area :desc %><br>
    <% item.errors.full_messages_for(:desc).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :price %><br>
    <%= form.text_field :price %>
    <% item.errors.full_messages_for(:price).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :quantity %><br>
    <%= form.text_field :quantity %>
    <% item.errors.full_messages_for(:quantity).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.label :warehouse %><br>
    <%= form.collection_select(:warehouse_id, Warehouse.all, :id, :name, :prompt => 'Select', :required => true) %>
    <% item.errors.full_messages_for(:warehouse_id).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to "home", root_path %>
